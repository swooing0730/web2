{{#section 'head'}}
<style>
    .weatherWidget {
        border: solid 1px blue;
        margin: 4px;
        padding: 4px;
    }
</style>
{{/section}}

<div class="weatherWidget">
    {{#each partials.weatherContext}}
    <div class="location">
        <h3>{{location.name}}</h3>
        <a href="{{forecastUrl}}">
            <img src="{{iconUrl}}" alt="{{weather}}">
            {{weather}}, {{temp}}
        </a>
    </div>
    {{/each}}
    <small>출처: <a href="https://www.weather.go.kr/w/index.do" target="_new">기상청 날씨누리</a></small>
</div>